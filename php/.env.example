# Application
APP_NAME="Unity DBT"
APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost:8007
HOSTNAME=localhost
PORT=8007

# Database
DB_CONNECTION=sqlite
DB_PATH=database.sqlite
DB_SCHEMA=schema.sql
DB_DATA=index.sql

# Paths
UPLOAD_PATH=uploads
DOCUMENTS_PATH=uploads/documents
IMAGES_PATH=uploads/images
OTHER_PATH=uploads/other

# Admin Configuration
ADMIN_PATH=/admin
ADMIN_SESSION_LIFETIME=120

# API Configuration
API_PATH=/api
API_VERSION=1.0
JWT_SECRET=your-secret-key-here
JWT_LIFETIME=3600

# Security
SESSION_DRIVER=file
SESSION_LIFETIME=120
COOKIE_LIFETIME=120

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"
